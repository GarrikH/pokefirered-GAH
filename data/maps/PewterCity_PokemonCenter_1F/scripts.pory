script PewterCity_PokemonCenter_1F_EventScript_Youngster {
	lock
    applymovement(PewterCity_PokemonCenter_1F_Youngster_LOCALID, moves(face_player))
    if(flag(FLAG_GOT_CLEFAIRY) == TRUE){
        msgbox(PewterCity_PokemonCenter_1F_Youngster_TEXT_2, MSGBOX_NPC)
    }
    elif(var(GOOD_PTS) >= 20){
        msgbox(PewterCity_PokemonCenter_1F_Youngster_TEXT_1, MSGBOX_NPC)
        givemon(SPECIES_CLEFAIRY, 15)
        playfanfare(MUS_OBTAIN_KEY_ITEM)
        waitfanfare()
        setflag(FLAG_GOT_CLEFAIRY)
        msgbox(format("That's a CLEFAIRY, not sure you\nknow about that.\p I just blessed you,\n you're welcome."), MSGBOX_NPC)
    }
    else {
        msgbox(PewterCity_PokemonCenter_1F_Youngster_TEXT_2, MSGBOX_NPC)
    }
    release
    end
}


text PewterCity_PokemonCenter_1F_Youngster_TEXT_1 {
	format("I try to be the change I wish\nto see in the world.\pI believe you feel similarly.\p")
}

